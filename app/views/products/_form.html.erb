<div class="panel panel-default">
  <div class="panel-heading">
    Adding Products
  </div>
  <div class="panel-body">
    <div class="container">
      <%= form_for @product, html: {multipart: true} do |f| %>
        <div class="row">
          <div class="col-md-4 select">
            <div class="form-group">
              <label>Product Type</label>
              <%= f.select :product_type, [["Personal", "Personal"],["Business", "Business"]], id: "product_type", prompt: "Select...", class: "form-control" %>
            </div>
          </div>

          <div class="col-md-4 select">
            <div class="form-group">
              <label>Category</label>
              <%= f.select :category, [["T-shirt", "T-shirt"],["Polo T", "Polo T"], ["Tank Top", "Tank Top"]], prompt: "Select...", class: "form-control" %>
            </div>
          </div>

          <div class="col-md-4 select">
            <div class="form-group">
              <label>Size</label>
              <%= f.select :size, [["XS", "XS"],["S", "S"], ["M", "M"], ["L", "L"], ["XL", "XL"]], prompt: "Select...", class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="form-group">
            <label>Stock</label>
            <%= f.text_field :stock, placeholder: "Number", class: "form-control" %>
          </div>
        </div>

        <div class="row">
          <div class="form-group">
            <label>Price</label>
            <span>$</span>
            <%= f.text_field :price, placeholder: "e.g. $100", class: "form-control" %>
          </div>
        </div>

        <div class="row">
          <div class="form-group">
            <label>Product Name</label>
            <%= f.text_field :product_name, placeholder: "Be precise", class: "form-control" %>
          </div>
        </div>

        <div class="row">
          <div class="form-group">
            <label>Description</label>
            <%= f.text_area :description, rows: 5, placeholder: "Clothing description", class: "form-control" %>
          </div>
        </div>

        <div class="row">
          <div class="col-md-4">
            <div class="form-group">
              <span class="btn btn-default btn-file">
                <i class="fa fa-cloud-upload fa-lg"> Upload Photos</i>
                <%= file_field_tag "images[]", type: :file, multiple: true %>
              </span>
            </div>
          </div>
        </div>

        <div id="photos"><%= render "product_photos/list" %></div>

        <div class="row">
          <div class="form-group">
            <%= f.check_box :active %> Active
          </div>
        </div>

        <div class="actions">
          <%= f.submit "Save", class: "btn btn-primary" %>
        </div>

      <% end %>
    </div>
  </div>
</div>
